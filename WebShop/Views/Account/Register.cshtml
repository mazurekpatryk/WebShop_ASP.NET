@model WebShop.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<div class="p-5 m-5">
    <div class="d-flex justify-content-center">
        @using (@Html.BeginForm("Register", "Account"))
        {
            @Html.AntiForgeryToken()

            <div id="login-error">
                @Html.ValidationMessage("loginerror", "")
                @Html.ValidationSummary()
            </div>

            <div id="login-table" style="margin-left: auto; margin-right: auto;">
                <div class="form-group">
                    <label>@Html.LabelFor(o => o.Email, "Email:")</label>
                    @Html.TextBoxFor(o => o.Email, null, new { @class = "form-control" })
                    <div class="login-validation-message text-danger">
                        @Html.ValidationMessageFor(o => o.Email)
                    </div>
                </div>
                <div class="form-group">
                    <label>@Html.LabelFor(o => o.Password, "Hasło")</label>

                    @Html.PasswordFor(o => o.Password, new { @class = "form-control" })
                    <div class="login-validation-message text-danger">
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>
                    <label>@Html.LabelFor(o => o.ConfirmPassword, "Hasło")</label>

                    @Html.PasswordFor(o => o.ConfirmPassword, new { @class = "form-control" })
                    <div class="login-validation-message text-danger">
                        @Html.ValidationMessageFor(o => o.ConfirmPassword)
                    </div>

                </div>
                <div class="form-group">

                    @*<div class="checkbox" style="margin-bottom: 10px;">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked" })
                        @Html.LabelFor(m => m.RememberMe)
                    </div>*@

                    <input type="submit" value="Zarejestruj" class="submitLink btn btn-primary btn-lg btn-block" />
                </div>
            </div>
        }
    </div>
</div>

@section ScriptsBottom{
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

